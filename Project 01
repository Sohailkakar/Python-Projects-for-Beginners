import random  # To let the computer "think" of a random number

def number_guessing_game():
    # Computer secretly chooses a number between 1 and 100
    number_to_guess = random.randint(1, 100)
    attempts = 0   # To count how many guesses the player makes
    guess = None   # Initialize with None so loop starts

    print("Welcome to the Number Guessing Game!")
    print("I am thinking of a number between 1 and 100.")

    # Keep looping until the user guesses correctly
    while guess != number_to_guess:
        # Get user input and convert it to an integer
        guess = int(input("Enter your guess: "))
        attempts += 1

        if guess < number_to_guess:
            print("Too low! Try a higher number.")
        elif guess > number_to_guess:
            print("Too high! Try a lower number.")
        else:
            print(f"Well done! You guessed the number in {attempts} attempts.")

# Run the game
number_guessing_game()
